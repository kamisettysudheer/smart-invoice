# Development Environment Configuration
# Copy this to .env and customize for your local setup

# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_NAME=smart_invoice
DB_USER=postgres
DB_PASSWORD=postgres

# Redis Configuration
REDIS_URL=redis://localhost:6379

# Service URLs
BACKEND_URL=http://localhost:8080
OCR_SERVICE_URL=http://localhost:8000

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_EXPIRY=24h

# File Upload Configuration
UPLOAD_MAX_SIZE=10MB
UPLOAD_ALLOWED_TYPES=image/jpeg,image/png,image/gif,application/pdf

# Storage Configuration (S3 or MinIO)
STORAGE_TYPE=minio
S3_BUCKET=smart-invoice
S3_REGION=us-east-1
S3_ACCESS_KEY=minioadmin
S3_SECRET_KEY=minioadmin
S3_ENDPOINT=http://localhost:9000

# OCR Configuration
OCR_ENGINE=tesseract
OCR_LANGUAGES=eng
CONFIDENCE_THRESHOLD=0.7

# AI/ML Configuration
AI_MODEL=gpt-3.5-turbo
OPENAI_API_KEY=your-openai-api-key

# Email Configuration (for notifications)
SMTP_HOST=localhost
SMTP_PORT=587
SMTP_USER=
SMTP_PASS=
FROM_EMAIL=noreply@smartinvoice.com

# Application Configuration
APP_ENV=development
APP_PORT=8080
LOG_LEVEL=debug
CORS_ALLOWED_ORIGINS=*

# Mobile App Configuration
API_BASE_URL=http://localhost:80/api
OCR_BASE_URL=http://localhost:80/ocr

# Feature Flags
ENABLE_SIGNUP=true
ENABLE_EMAIL_VERIFICATION=false
ENABLE_RATE_LIMITING=true
ENABLE_AUDIT_LOGGING=true
